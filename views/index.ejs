<%- include('partials/header') %>
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 min-h-screen flex items-center justify-center bg-gradient-to-b from-gray-50 to-gray-100">
  <div class="text-center max-w-2xl">
    <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 mb-4 tracking-tight animate-fade-in-down">
      Welcome to SpendWise
    </h1>
    <p class="text-lg sm:text-xl text-gray-600 mb-8 leading-relaxed animate-fade-in-up">
      Track your expenses effortlessly and securely with our intuitive platform.
    </p>
    <a href="/login" 
       class="inline-block text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out transform hover:-translate-y-1 text-lg font-medium" style="background-color: #1e3a8a;">
      Get Started
    </a>
  </div>
</div>

<style>
  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in-down {
    animation: fadeInDown 0.6s ease-out forwards;
  }
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>
</body>
</html>